@model ECommerce.MVC.Areas.Dashboard.Models.ViewModels.LoginVM

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-md-6 mx-auto">
    <!-- general form elements -->
    <div class="card card-primary">
        <div class="card-header">
            <h3 class="card-title">Giriş</h3>
        </div>
        <!-- /.card-header -->
        <!-- form start -->
        <form method="post">
            <div class="card-body">
                <div class="form-group">
                    <label>Email</label>
                    <input type="email" class="form-control" cols="5" rows="8" asp-for="Email">
                    <span asp-validation-for="Email"></span>
                </div>
                <div class="form-group">
                    <label>Şifre</label>
                    <input type="password" class="form-control" placeholder="Şifre Girin" asp-for="Password">
                    <span asp-validation-for="Password"></span>
                </div>
                @*<div class="form-group">
                    <div class="d-flex">
                        <div class="form-check">
                            <input type="checkbox" class="form-check-input" name="rpersistant" value="Beni Hatırla" asp-for="IsPersistant"/>
                            <label>Beni Hatırla</label>
                        </div>
                    </div>
                </div>*@
            </div>
            <!-- /.card-body -->

            <div class="card-footer">
                <button type="submit" class="btn btn-primary">Giriş Yap</button>
            </div>
        </form>
    </div>
</div>
