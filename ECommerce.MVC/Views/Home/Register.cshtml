@model ECommerce.MVC.Areas.Dashboard.Models.ViewModels.RegisterVM

@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-md-6 mx-auto">
    <!-- general form elements -->
    <div class="card card-primary">
        <div class="card-header">
            <h3 class="card-title">Kullanıcı Bilgileri</h3>
        </div>
        <!-- /.card-header -->
        <!-- form start -->
        <form method="post">
            <div class="card-body">
                @if(TempData["Error"] != null){
                    @foreach (var item in TempData["Error"] as List<string>)
                    {
                        <span>@item</span>
                    }
                }
                <div class="form-group">
                    <label>Kullanıcı Adı</label>
                    <input type="text" class="form-control" placeholder="Kullanıcı Adı Girin" asp-for="Username">
                    <span asp-validation-for="Username"></span>
                </div>
                <div class="form-group">
                    <label>Email Adresi</label>
                    <input type="email" class="form-control" cols="5" rows="8" asp-for="Email">
                    <span asp-validation-for="Email"></span>
                </div>
                <div class="form-group">
                    <label>Şifre</label>
                    <input type="password" class="form-control" placeholder="Şifre Girin" asp-for="Password">
                    <span asp-validation-for="Password"></span>
                </div>
                <div class="form-group">
                    <label>Şifre Tekrarı</label>
                    <input type="password" class="form-control" placeholder="Şifreyı Tekrar Girin" asp-for="ConfirmPassword">
                    <span asp-validation-for="ConfirmPassword"></span>
                </div>
            </div>
            <!-- /.card-body -->

            <div class="card-footer">
                <button type="submit" class="btn btn-primary">Kullanıcı Oluştur</button>
            </div>
        </form>
    </div>
    <!-- /.card -->
    <!-- general form elements -->










</div>


