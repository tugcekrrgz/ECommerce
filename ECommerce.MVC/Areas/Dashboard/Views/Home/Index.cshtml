
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Dashboard/Views/Shared/_DashboardLayout.cshtml";
    decimal? subTotal = 0;
}


<!-- Content Header (Page header) -->
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">@ViewData["Title"]</h1>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>
<!-- /.content-header -->
<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <!-- Small boxes (Stat box) -->
        <div class="row">
            <div class="col-lg-3 col-6">
                <!-- small box -->
                <div class="small-box bg-info">
                    <div class="inner">
                        <h3>@ViewBag.OrderCount</h3>

                        <p>Toplam Sipariş</p>
                    </div>
                    <div class="icon">
                        <i class="ion ion-bag"></i>
                    </div>
                    <a href="#" class="small-box-footer">More info <i class="fas fa-arrow-circle-right"></i></a>
                </div>
            </div>
            <!-- ./col -->
            <div class="col-lg-3 col-6">
                <!-- small box -->
                <div class="small-box bg-success">
                    <div class="inner">
                        <h3>@ViewBag.TotalProduct</h3>

                        <p>Toplam Ürün</p>
                    </div>
                    <div class="icon">
                        <i class="ion ion-stats-bars"></i>
                    </div>
                    <a href="#" class="small-box-footer">More info <i class="fas fa-arrow-circle-right"></i></a>
                </div>
            </div>
            <!-- ./col -->
            <div class="col-lg-3 col-6">
                <!-- small box -->
                <div class="small-box bg-warning">
                    <div class="inner">
                        <h3>@ViewBag.UserCount</h3>

                        <p>Toplam Kullanıcı</p>
                    </div>
                    <div class="icon">
                        <i class="ion ion-person-add"></i>
                    </div>
                    <a href="#" class="small-box-footer">More info <i class="fas fa-arrow-circle-right"></i></a>
                </div>
            </div>
            <!-- ./col -->
            <div class="col-lg-3 col-6">
                <!-- small box -->
                <div class="small-box bg-danger">
                    <div class="inner">
                        <h3>@ViewBag.TotalRevenue</h3>

                        <p>Toplam Gelir</p>
                    </div>
                    <div class="icon">
                        <i class="ion ion-pie-graph"></i>
                    </div>
                    <a href="#" class="small-box-footer">More info <i class="fas fa-arrow-circle-right"></i></a>
                </div>
            </div>
            <!-- ./col -->
        </div>
        <!-- /.row -->
        <!-- Main row -->
        
        <div class="row">
            <div class="col-md-12">
                <section>
                    <div class="card">
                        <div class="card-header">
                            <h2>Siparişler</h2>
                        </div>
                        <div class="card-body">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Sipariş Tarihi</th>
                                        <th>Sipariş No</th>
                                        <th>Toplam Tutar</th>
                                        <th>Kargo Durum</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var order in ViewBag.Orders as List<IGrouping<int, OrderDTO>>)
                                    {
                                        subTotal=0;
                                        <tr>
                                            <td>@order.Key</td>
                                            <td>@order.Where(x=> x.Id==order.Key).FirstOrDefault().OrderDate</td>
                                            <td>@order.Key</td>
                                            <td>@order.Where(x=> x.Id==order.Key).Sum(x=> x.TotalPrice)</td>
                                            <td>
                                                @if (@order.Where(x => x.Id == order.Key).FirstOrDefault().ShipperId != null)
                                                {
                                                    <a class="btn btn-success btn-sm" asp-action="Details" asp-controller="Order">Kargo Bilgileri</a>
                                                }
                                                else
                                                {
                                                    <a class="btn btn-warning btn-sm" asp-action="AddShipper" asp-controller="Order" asp-route-id="@order.Key">Kargo Oluştur</a>
                                                }                                                
                                            </td>
                                            <td>
                                                <a class="btn btn-danger btn-sm" asp-action="Details" asp-controller="Order" asp-route-id="@order.Key">Sipariş Detayları</a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </section>
            </div>            
        </div>
        <!-- /.row (main row) -->
    </div><!-- /.container-fluid -->
</section>
<!-- /.content -->

