@model List<Shipper>
@{
    ViewData["Title"] = "Kargo Şirketleri";
    Layout = "~/Areas/Dashboard/Views/Shared/_DashboardLayout.cshtml";
}

<section>
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <div class="d-flex justify-content-between">
                        <h2>@ViewData["Title"]</h2>
                        <div class="p-1">
                            <a asp-action="Create" asp-controller="Shipper" class="btn btn-success btn-sm">Kargo Şirketi Ekle</a>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Şirket Adı</th>
                                <th>Şirket Adresi</th>
                                <th>Şirket Numarası</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach(var shipper in Model){
                                <tr>
                                    <td>@shipper.Id</td>
                                    <td>@shipper.CompanyName</td>
                                    <td>@shipper.Address</td>
                                    <td>@shipper.PhoneNumber</td>
                                    <td>
                                        <a class="btn btn-xs btn-warning" asp-action="Update" asp-controller="Shipper" asp-route-id="@shipper.Id">Düzenle</a>
                                        <a class="btn btn-xs btn-danger" asp-action="Delete" asp-controller="Shipper" asp-route-id="@shipper.Id">Sil</a>
                                    </td>
                                </tr>                                 
                                    
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>

