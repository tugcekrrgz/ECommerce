@model CategoryVM

@{
    ViewData["Title"] = "Update";
    Layout = "~/Areas/Dashboard/Views/Shared/_DashboardLayout.cshtml";
}

<div class="col-md-6 mx-auto">
    <!-- general form elements -->
    <div class="card card-primary">
        <div class="card-header">
            <h3 class="card-title">Kategori Bilgileri</h3>
        </div>
        <!-- /.card-header -->
        <!-- form start -->
        <form method="post">
            <div class="card-body">
                <div class="form-group">
                    <label for="exampleInputEmail1">Kategori Ad</label>
                    <input type="text" class="form-control" placeholder="Kategori Adı Girin" asp-for="CategoryName" value="@Model.CategoryName">
                    <span asp-validation-for="CategoryName"></span>
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">Kategori Açıklama</label>
                    <textarea class="form-control" cols="5" rows="8" asp-for="Description" value="@Model.Description"></textarea>
                </div>
            </div>
            <!-- /.card-body -->

            <div class="card-footer">
                <button type="submit" class="btn btn-primary">Kategori Güncelle</button>
            </div>
        </form>
    </div>
    <!-- /.card -->
    <!-- general form elements -->










</div>

